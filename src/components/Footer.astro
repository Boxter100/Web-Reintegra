---
// Footer.astro - Pie de página del sitio

const anioActual = new Date().getFullYear();

const enlaces = [
  { texto: "Inicio", url: "#" },
  { texto: "Servicios", url: "#servicios" },
  { texto: "Galería", url: "#galeria" },
  { texto: "Contacto", url: "#contacto" },
  { texto: "Política de Privacidad", url: "#" },
  { texto: "Términos y Condiciones", url: "#" }
];

const horarios = [
  { dia: "Lunes - Viernes", horas: "7:00 AM - 9:00 PM" },
  { dia: "Sábados", horas: "10:00 AM - 6:30 PM" },
  { dia: "Domingos", horas: "Cerrado" }
];
---

<footer class="bg-gray-800 text-white pt-12 pb-6">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Información de contacto -->
      <div>
        <h3 class="text-xl font-bold mb-4">ReIntegra</h3>
        <p class="mb-2">Centro especializado en fisioterapia y rehabilitación física.</p>
        <address class="not-italic">
          <div class="flex items-start mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>Plaza Comercia "Encuentro Tlalnepantla"</span>
          </div>
          <div class="flex items-center mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span>55 7303 0027</span>
          </div>
          <div class="flex items-center mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span>info@reintegra.com</span>
          </div>
        </address>
      </div>
      
      <!-- Enlaces rápidos -->
      <div>
        <h3 class="text-xl font-bold mb-4">Enlaces rápidos</h3>
        <ul class="space-y-2">
          {enlaces.map(enlace => (
            <li>
              <a href={enlace.url} class="hover:text-blue-300 transition duration-300">{enlace.texto}</a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Horarios -->
      <div>
        <h3 class="text-xl font-bold mb-4">Horarios de atención</h3>
        <ul class="space-y-2">
          {horarios.map(horario => (
            <li class="flex justify-between">
              <span>{horario.dia}:</span>
              <span class="font-medium">{horario.horas}</span>
            </li>
          ))}
        </ul>
      </div>
      
    <!-- Pie de página con copyright -->
    <div class="border-t border-gray-700 mt-10 pt-6 text-center text-gray-400">
      <p>&copy; {anioActual} ReIntegra. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>
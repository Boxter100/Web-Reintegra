  {redesSociales.map(red => (
    <a 
      href={red.url} 
      target="_blank" 
      rel="noopener noreferrer"
      class={`flex items-center justify-center w-10 h-10 rounded-full ${red.colorFondo} shadow-2xl hover:shadow-lg transition duration-300 transform hover:-translate-y-1`}
      aria-label={`Síguenos en ${red.nombre}`}
      title={red.nombre}
    >
      <svg xmlns="http://www.w3.org/2000/svg" class={`h-6 w-6 ${red.colorIcono}`} viewBox="0 0 24 24" fill="currentColor">
        <path d={red.icono}></path>
      </svg>
    </a>
  ))}
